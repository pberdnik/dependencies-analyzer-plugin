<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.pberdnik.dependenciesanalyzerplugin</id>
    <name>Dependencies Analyzer</name>
    <vendor>pberdnik</vendor>

    <depends>com.intellij.modules.platform</depends>

    <actions>
        <action id="com.github.pberdnik.dependenciesanalyzerplugin.actions.PopupDialogAction" class="com.github.pberdnik.dependenciesanalyzerplugin.actions.PopupDialogAction"
                text="Action Basics Plugin: Show Graph Name" description="SDK action example"
                icon="SdkIcons.coloredGraph">
            <add-to-group group-id="ToolsMenu" anchor="first"/>
            <override-text place="MainMenu" text="Show Code Files Size"/>
        </action>
        <action id="com.github.pberdnik.dependenciesanalyzerplugin.actions.ChangeGraphNameAction" class="com.github.pberdnik.dependenciesanalyzerplugin.actions.ChangeGraphNameAction"
                text="Action Basics Plugin: Change Graph Name" description="SDK action example"
                icon="SdkIcons.coloredGraph">
            <add-to-group group-id="ToolsMenu" anchor="first"/>
            <override-text place="MainMenu" text="Add Random Path To CodeFiles"/>
        </action>
        <action id="com.intellij.packageDependencies.actions.MyAnalyzeDependenciesAction" class="com.intellij.packageDependencies.actions.MyAnalyzeDependenciesAction"
                text="Action Basics Plugin: Change Graph Name" description="SDK action example"
                icon="SdkIcons.coloredGraph">
            <add-to-group group-id="ToolsMenu" anchor="first"/>
            <override-text place="MainMenu" text="Analyze Dependencies"/>
        </action>
    </actions>

    <extensions defaultExtensionNs="com.intellij">
        <projectService serviceImplementation="com.github.pberdnik.dependenciesanalyzerplugin.storage.GraphStorageService"/>
        <applicationService serviceImplementation="com.github.pberdnik.dependenciesanalyzerplugin.services.MyApplicationService"/>
        <projectService serviceImplementation="com.github.pberdnik.dependenciesanalyzerplugin.services.MyProjectService"/>

        <projectViewPane implementation="com.github.pberdnik.dependenciesanalyzerplugin.views.DependenciesProjectViewPane"/>
    </extensions>

    <applicationListeners>
        <listener class="com.github.pberdnik.dependenciesanalyzerplugin.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>
</idea-plugin>
